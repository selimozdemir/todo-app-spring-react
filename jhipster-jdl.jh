/**
 * Task entity.
 */
entity Task {
	name String,
	description String,
    createDate Instant,
    deadline Instant,
    status Status
}

enum Status {
    INPROGRESS, COMPLETED, EXPIRED
}

relationship OneToMany {
	Task{parent} to Task
}


relationship OneToOne {
	Task{user} to User
}


paginate Task with pagination

// Use Data Transfert Objects (DTO)
// dto * with mapstruct

// Set service options to all except few
service all with serviceImpl

filter Task
